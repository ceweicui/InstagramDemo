<%= link_to "next photo" + String(@photopost.next.id), photopost_path(@photopost.next) if @photopost.next %>
<%= link_to "prev photo" + String(@photopost.prev.id), photopost_path(@photopost.prev) if @photopost.prev %>



<%= button_to 'Delete Image', photopost_path(@photopost), :method => :delete, :data => { :confirm => "Are you sure?" } %>

<%= button_to 'Update Image', edit_photopost_path(@photopost), :method => :get %>


<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <div class="single-photo-slide">
        <%= image_tag @photopost.image.url, :size => "600x400" %>
        <div class="carousel-caption">
          <h2><%= @photopost.caption %></h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Left and right controls -->

  <% if @photopost.prev %>
    <%= link_to photopost_path(@photopost.prev), :class => 'left carousel-control' do %>
      <span><%= image_tag "chevron_left_black_192x192.png" %></span>
    <% end %>
  <% end %>

  <% if @photopost.next %>
    <%= link_to photopost_path(@photopost.next), :class => 'right carousel-control' do %>
      <span><%= image_tag "chevron_right_black_192x192.png" %></span>
    <% end %>
  <% end %>

</div>